
 
 <h1> Become a Student </h2>

 <% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
      <p style="color: red"><%= error %> </p>
    <% end %>
<% end %>

<%= form_for @student do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :age %>
<%= f.number_field :age %>
<br>
<%= f.label :avatar %>
<%= f.file_field :avatar %>

<%= f.submit %>

<% end %>